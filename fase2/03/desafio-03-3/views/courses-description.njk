{% extends "layout.njk" %}

{% block head %}
    <title>Desafio 3-3 -
        {{card.title}}</title>
{% endblock %}

{% block wrapper %}
    <section class="card-courses-description">
        <div id="{{card.id}}" class="card">
            <div class="card-img">
                <img src="{{card.img}}" alt="Starter">
            </div>
            <div class="card-content">
                <h3>{{card.title}}</h3>
            </div>
            <div class="card-info">
                <p>{{card.module}}</p>
                <p class="card-price">{{card.price}}</p>
            </div>
            <div class="menu">
                <h3 class="course-link">Para mais informações, acesse
                    <a class="link-{{card.id}}" href="http://www.rocketseat.com.br/{{card.id}}" target="_blank">{{card.title}}</a>
                </h3>
            </div>
        </div>
    </section>
{% endblock %}